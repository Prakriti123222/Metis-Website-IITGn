<div class="container text-center">
    <h1 class="heading2 gsap-headings"><u>Events/Workshops</u></h1>

    <div class=" row row-cols-1 row-cols-md-3 g-4">

        <% array=array.sort(); %>

            <% array.forEach(function(item){ %>

                <div class="col gsap-up">
                    <div class="card card-style" data-aos="fade-up">

                        <img src=<%=item.Relevant_image_link %> class="card-img-top card-image" alt="image">

                        <div class="card-body">
                            <h5 class="card-title content-font">
                                <%=item.Title%>
                            </h5>
                            <p>
                                <%= item.Date_Time %>
                            </p>
                            <p class="card-text">

                                <a class="animation-reverse big-link" aria-label="know more" href="/metis/events_workshops/<%=item.Title%>" type="button">Know
                                    More</a>
                            </p>

                        </div>
                    </div>
                </div>

                <% }) %>
    </div>
</div>