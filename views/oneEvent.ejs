<div class="container">

    <h1 class="heading gsap-headings"><u>
            <%= title %>
        </u></h1>

    <div class="row single-text">
        <h3 class="single-heading gsap-headings">Date and Time</h3>
        <p>
            <%= details %>
        </p>

        <% if (event_link==="if meet link is available add it else leave this field untouched! " ) { %>
            <% console.log("no link") %>
                <% }else{ %>
                    <p>
                    <h3 class="single-heading gsap-headings big-link">Event/Workshop Link</h3>
                    <% var linksArray=event_link.split(","); %>

                        <% linksArray.forEach(function(link){ %>
                            <a class="gsap-up big-link" aria-label="meet link" href=<%=link%> target="blank">
                                <i class="fa fa-link"></i>
                                <%= link %>
                            </a>
                            <% }) %>

                                </p>
                                <% } %>

                                    <h3 class="single-heading gsap-headings">Description</h3>
                                    <p class="gsap-up">
                                        <%=content %>
                                    </p>

                                    <% if
                                        (links==="add links as displayName @@ url and two links separated by && and if there are no links just keep this field untouched"
                                        ) { %>
                                        <% console.log("no links") %>
                                            <% }else{ %>
                                                <p>
                                                <h3 class="gsap-headings single-heading">Important Links</h3>
                                                <% var linksArray=links.split("&&"); %>
